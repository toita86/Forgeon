{% set langs = languages | lower | replace(" ", "") | split(",") %}

# General ignores
*.log
*.tmp
**/.DS_Store

{% if "rust" in langs %}
# Rust-specific ignores
# Generated by Cargo
debug
target

# Backup files generated by rustfmt
**/*.rs.bk

# MSVC Windows builds of rustc generate these
*.pdb

# Generated by cargo mutants
**/mutants.out*/
{% endif %}

{% if "python" in langs %}
# Python-specific ignores
__pycache__/
*.pyc
*.pyo
.env
{% endif %}

{% if "go" in langs %}
# Go-specific ignores
bin/
vendor/
{% endif %}

